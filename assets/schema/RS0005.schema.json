{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Motor",
  "description": "Schema for ASHRAE 205 annex RS0005: Motor",
  "definitions": {
    "RS0005": {
      "type": "object",
      "properties": {
        "description": {
          "description": "Data group describing product and rating information",
          "$ref": "RS0005.schema.json#/definitions/Description"
        },
        "performance": {
          "description": "Data group containing performance information",
          "$ref": "RS0005.schema.json#/definitions/Performance"
        }
      },
      "required": [
        "performance"
      ],
      "additionalProperties": false
    },
    "Description": {
      "type": "object",
      "properties": {
        "product_information": {
          "description": "Data group describing product information",
          "$ref": "RS0005.schema.json#/definitions/ProductInformation"
        }
      },
      "additionalProperties": false
    },
    "ProductInformation": {
      "type": "object",
      "properties": {
        "manufacturer": {
          "description": "Name of the manufacturer",
          "type": "string"
        },
        "model_number": {
          "description": "Model number",
          "$ref": "ASHRAE205.schema.json#/definitions/Pattern",
          "note": "Pattern shall match all model numbers that can be represented by the *representation*"
        },
        "input_voltage": {
          "description": "Input voltage",
          "type": "number",
          "units": "V",
          "minimum": 0
        },
        "input_frequency": {
          "description": "Input frequency",
          "type": "number",
          "units": "Hz",
          "minimum": 0
        },
        "number_of_poles": {
          "description": "Number of poles",
          "type": "integer"
        }
      },
      "required": [
        "manufacturer",
        "model_number",
        "input_voltage",
        "input_frequency"
      ],
      "additionalProperties": false
    },
    "Performance": {
      "type": "object",
      "properties": {
        "maximum_power": {
          "description": "Maximum operational input power to the motor",
          "type": "number",
          "units": "W",
          "minimum": 0,
          "notes": "This is the operational limit set to prevent overheating or overcurrent. This is not the rated name plate power."
        },
        "standby_power": {
          "description": "Power draw when motor is not operating",
          "type": "number",
          "units": "W",
          "minimum": 0
        },
        "drive_representation": {
          "description": "The corresponding Standard 205 drive representation",
          "$ref": "ASHRAE205.schema.json#definitions/ASHRAE205",
          "RS": "RS0006"
        },
        "performance_map": {
          "description": "Data group describing motor performance when operating",
          "$ref": "RS0005.schema.json#/definitions/PerformanceMap",
          "notes": "If no performance map is defined, the motor shall be assumed to transfer all electric power directly to the shaft. ***Informative note:*** This field may be omitted for motor-driven equipment where motor efficiencies are incorporated into their performance data."
        }
      },
      "required": [
        "maximum_power",
        "standby_power"
      ],
      "additionalProperties": false
    },
    "PerformanceMap": {
      "type": "object",
      "properties": {
        "grid_variables": {
          "description": "Data group describing grid variables for motor performance",
          "$ref": "RS0005.schema.json#/definitions/GridVariables"
        },
        "lookup_variables": {
          "description": "Data group describing lookup variables for motor performance",
          "$ref": "RS0005.schema.json#/definitions/LookupVariables"
        }
      },
      "required": [
        "grid_variables",
        "lookup_variables"
      ],
      "additionalProperties": false
    },
    "GridVariables": {
      "type": "object",
      "properties": {
        "shaft_power": {
          "description": "Delivered rotational shaft power",
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "number",
            "minimum": 0
          },
          "units": "W"
        }
      },
      "required": [
        "shaft_power"
      ],
      "additionalProperties": false
    },
    "LookupVariables": {
      "type": "object",
      "properties": {
        "efficiency": {
          "description": "Efficiency of motor",
          "type": "array",
          "minItems": 1,
          "items": {
            "type": [
              "number",
              "null"
            ],
            "minimum": 0,
            "maximum": 1
          },
          "units": "-",
          "notes": "Defined as the ratio of mechanical shaft power to electrical input power of the motor."
        },
        "power_factor": {
          "description": "Power factor of the motor",
          "type": "array",
          "minItems": 1,
          "items": {
            "type": [
              "number",
              "null"
            ],
            "minimum": 0,
            "maximum": 1
          },
          "units": "-"
        }
      },
      "required": [
        "efficiency",
        "power_factor"
      ],
      "additionalProperties": false
    }
  }
}